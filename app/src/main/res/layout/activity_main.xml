<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.conta.happybirthday.MainActivity">

    <ImageView
        android:id="@+id/birthday"
        android:background="@drawable/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/happybirthday_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy Birthday!"
        android:textSize="55dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="16dp"
       android:textAlignment="gravity"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"/>


    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:textSize="55dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="16dp"
        android:layout_below="@+id/happybirthday_text_view"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"  />

    <TextView
        android:id="@+id/my_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Kate xx"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"
        android:layout_centerInParent="true"/>

</RelativeLayout>
